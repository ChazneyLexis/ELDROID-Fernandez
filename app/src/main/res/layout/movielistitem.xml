<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/topRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <Button
            android:id="@+id/deleteIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:backgroundTint="@color/teal_700"
            android:text="Delete" />

        <Button
            android:id="@+id/editIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:backgroundTint="@color/teal_700"
            android:text="Edit" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topRL"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/imageLL"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_ll"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLL"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/movTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title: Sample Title"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year: Sample Year"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count: Sample Count"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movReleasedD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Date: Sample Date"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movRunT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run Time: Sample Run Time"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Languagee: Sample Languagee"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>


    </RelativeLayout>